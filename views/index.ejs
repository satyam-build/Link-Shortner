<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>Document</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');
*{
  box-sizing: border-box;
}
body{
/* background-color: #fff; */
background-color: rgb(236,22,0);
font-family: Poppins;
}
#fullUrl{
  width: 80vw;
  max-width: 900px;
  height: 50px;
  border-radius: 3px;
}
.container{
width: 80vw;
max-width: 1300px;
margin-top: 10vh;
padding:50px 50px 100px 50px;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
/* box-shadow: 0 0  14px 14px rgb(239, 239, 239); */
}
form{
margin-top: 30px;
margin-bottom: 50px;
}
h1{
  color: #fff;
}
tr{
  height: 60px;
  background-color: #fff !important ;
    color: black;
  
  border: 25px solid rgb(236,22,0) ;
  
}
a{
  color: black;
}
.btn{
  padding:5px 25px;
  height: 50px;
  background-color: #fff;
  color : black;
  border-radius: 3px;
}
#shortURL{
  font-weight: 600;
}
.analytics{
 color : rgb(236,22,0);
}

.material-symbols-outlined {
  font-variation-settings:
  'FILL' 0,
  'wght' 500,
  'GRAD' 0,
  'opsz' 48 ;
  
}
.copybtn{
  cursor: pointer;
}

  </style>
</head>
<body>
  <div class="container">
    <h1>Paste the URL to be shortened</h1>
    <form action="/shortUrls" method="POST" class=" form-inline">
      <label for="fullUrl" class="sr-only">Url</label>
      <input required placeholder="Enter the URL to be shortened" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
      <button class="btn btn-success" type="submit">Shorten URL</button>
    </form>
    
    <table class="table table-striped table-responsive">
      <!-- <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Copy Text</th>
          <th>Clicks</th>
          <Qr>Qr-code</th>
        </tr>
      </thead> -->
      <tbody>
         <% shortUrls.forEach(shortUrl => { %> 
          <tr>
            <td class="longURL"><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td id="shortURL"><a href="<%= shortUrl.short %>" id="shorturl"><%= shortUrl.short %></a></td>
            <td class="copybtn" onclick="myFunction()"><span class="material-symbols-outlined" onclick="myFunction()">content_copy</span></td>
            <td class="analytics"><%= shortUrl.clicks %></td>
          </tr>
        <% }) %> 
      </tbody>
    </table>
  </div>
  <script>
    function myFunction() {
  // Get the text field
  var copyText = document.getElementById('shorturl');

  // Select the text field
  copyText.select();
  copyText.setSelectionRange(0, 99999); // For mobile devices

   // Copy the text inside the text field
  navigator.clipboard.writeText(copyText.value);

  // Alert the copied text
  alert("Copied the text: " + copyText.value);
}
  </script>
</body>
</html>